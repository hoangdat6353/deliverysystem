<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/imvReminderClock_WarehouseItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ship_item"></ImageView>

    <TextView
        android:id="@+id/tvReceiverName_WarehouseItem"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Khách Hàng 1"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imvReminderClock_WarehouseItem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>



    <TextView
        android:id="@+id/tvReceiverAddress_WarehouseItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thực Phẩm"
        android:textSize="20sp"
        android:textColor="#1d00f5"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imvReminderClock_WarehouseItem"
        app:layout_constraintTop_toBottomOf="@+id/tvReceiverName_WarehouseItem"></TextView>


    <TextView
        android:id="@+id/tvReceiverMethod_WarehouseItem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Chuyển Phát Nhanh"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="15sp"
        app:layout_constraintLeft_toRightOf="@+id/imvReminderClock_WarehouseItem"
        app:layout_constraintTop_toBottomOf="@+id/tvReceiverAddress_WarehouseItem"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>