<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CSKHDetails"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fece2f"
        android:padding="20dp">

        <ImageView
            android:id="@+id/vehImage_Edit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ship_item"></ImageView>

        <TextView
            android:id="@+id/vehName_Edit_Header"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/vehImage_Edit"
            android:includeFontPadding="false"
            android:text="THÔNG TIN ĐƠN HÀNG"
            android:textColor="#000"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_width="match_parent"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="125dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/imvBrand_ShippingDetails"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10sp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/brand" />

                <TextView
                    android:id="@+id/tvShipType_CSKHDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/imvBrand_ShippingDetails"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:text="Thực Phẩm"
                    android:textSize="24sp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewVehicle_Edit_Final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/name" />

                <TextView
                    android:id="@+id/tvReceiverName_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewBrand_Edit_Final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/address" />

                <TextView
                    android:id="@+id/tvReceiverAddress_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewPlate_Edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/tvReceiverPhone_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewVehicle2_Edit_Final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/name" />

                <TextView
                    android:id="@+id/tvCustomerName_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                   />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewBrand_Edit_Final2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/address" />

                <TextView
                    android:id="@+id/tvCustomerAddress_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewPlate2_Edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/tvCustomerPhone_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageViewNote_Edit_Final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="-10dp"
                    app:srcCompat="@drawable/note" />

                <TextView
                    android:id="@+id/tvNote_CSKHDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

            </TableRow>


        </TableLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/btnDecline"
                android:layout_width="30dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:paddingLeft="-10dp"
                app:srcCompat="@drawable/delete_icon" />

            <ImageView
                android:id="@+id/btnApprove"
                android:layout_width="30dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:paddingStart="10dp"
                app:srcCompat="@drawable/check_icon"
                />

        </TableRow>
            </TableLayout>
        </LinearLayout>

</LinearLayout>
