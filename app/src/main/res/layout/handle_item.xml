<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/imvReminderClock_Item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/warehouseaddress"></ImageView>

    <TextView
        android:id="@+id/tvShipName_HandleItem"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Thực Phẩm"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imvReminderClock_Item"
        app:layout_constraintRight_toLeftOf="@+id/imvSendShipper_HandleItem"
        app:layout_constraintTop_toTopOf="parent"></TextView>



    <TextView
        android:id="@+id/tvWarehouseName_HandleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kho A"
        android:textSize="20sp"
        android:textColor="#1d00f5"
        app:layout_constraintRight_toLeftOf="@+id/imvSendShipper_HandleItem"
        android:paddingTop="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@id/imvReminderClock_Item"
        app:layout_constraintTop_toBottomOf="@+id/tvShipName_HandleItem"></TextView>

    <ImageView
        android:id="@+id/imvSendShipper_HandleItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_local_shipping_24"
        app:layout_constraintBottom_toBottomOf="parent"
        ></ImageView>





</androidx.constraintlayout.widget.ConstraintLayout>